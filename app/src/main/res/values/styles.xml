<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2b99af</item>
        <item name="colorPrimaryDark">@color/colornice</item>
        <item name="colorAccent">@color/colornice</item>
    </style>

    <style name="AppTheme.Toolbar" parent="WAppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:background">#45adfc</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--item RadioButton or CheckBox color-->
        <item name="colorControlNormal">#b8b6b6</item>
        <item name="colorControlActivated">@color/colornice</item>
        <!--item text color-->
        <item name="textColorAlertDialogListItem">@color/colornice</item>
        <!--buttons color-->
        <item name="colorAccent">@color/colornice</item>
        <!--title and message color-->
        <!--<item name="android:textColorPrimary">@color/purple_real</item>-->
        <!--dialog background-->
        <!--<item name="android:windowBackground">@drawable/background_dialog</item>-->
    </style>

</resources>
