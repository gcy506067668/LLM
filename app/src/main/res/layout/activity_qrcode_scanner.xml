<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <FrameLayout
        android:id="@+id/fl_my_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <LinearLayout
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="#00ffffff">
        <Button
            android:id="@+id/add_application_by_text"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:text="生成二维码"
            android:background="@drawable/touch_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" >
                <at.markushi.ui.CircleButton
                    android:id="@+id/button_exit"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_width="64dip"
                    android:layout_height="64dip"
                    android:src="@drawable/ic_reply_black_24dp"
                    app:cb_color="@color/colorAccent"
                    app:cb_pressedRingWidth="8dip" />
            </FrameLayout>
            <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" >
                <at.markushi.ui.CircleButton
                    android:id="@+id/button_album"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_width="64dip"
                    android:layout_height="64dip"
                    android:src="@drawable/ic_collections_black_24dp"
                    app:cb_color="@color/colorAccent"
                    app:cb_pressedRingWidth="8dip" />
            </FrameLayout>
            <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" >
                <at.markushi.ui.CircleButton
                    android:id="@+id/button_openlight"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_width="64dip"
                    android:layout_height="64dip"
                    android:src="@drawable/ic_lightbulb_outline_white_24dp"
                    app:cb_color="@color/colorAccent"
                    app:cb_pressedRingWidth="8dip" />
            </FrameLayout>
            <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" >
                <at.markushi.ui.CircleButton
                    android:id="@+id/button_create_qrcode"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_width="64dip"
                    android:layout_height="64dip"
                    android:src="@drawable/ic_add_black_24dp"
                    app:cb_color="@color/colorAccent"
                    app:cb_pressedRingWidth="8dip" />
            </FrameLayout>


        </LinearLayout>
    </LinearLayout>




</FrameLayout>